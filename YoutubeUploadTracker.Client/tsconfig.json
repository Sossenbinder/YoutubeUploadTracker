{
  "compilerOptions": {
    // Output
    "target": "ES2020",
    "module": "ESNext",
    "outDir": "./dist/esm/",
    "rootDir": "./",
    "declaration": true,
    "noEmitOnError": false,
    // Resolution
    "moduleResolution": "Bundler",
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "jsx": "preserve",
    "sourceMap": true,
    "baseUrl": "./",
    "paths": {
      "@root/*": ["./*"],
      "@features/*": ["src/features/*"],
      "@auth/*": ["src/features/auth/*"],
      "@common/*": ["src/features/common/*"],
      "@pages/*": ["src/pages/*"]
    },
    "lib": ["DOM", "DOM.Iterable", "ESNext"],
    "types": ["vite/client", "vike-react", "node"],
    // Strictness
    "strict": true,
    "noUncheckedIndexedAccess": false,
    // Misc
    "skipLibCheck": true
  },
  "exclude": ["**/*.spec.ts", "./node_modules/", "./dist/"]
}
