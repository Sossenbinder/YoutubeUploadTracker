{
    admin off
}

https://yut.local.com {
    @api {
        path /api/*
    }

    reverse_proxy @api {
        to https://host.docker.internal:5238
        
        transport http {
            tls_insecure_skip_verify
        }
    }

    reverse_proxy {
        to http://host.docker.internal:3000
    }

	tls /etc/caddy/certs/cert.crt /etc/caddy/certs/cert.key
}